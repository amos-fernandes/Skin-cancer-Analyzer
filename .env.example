# ============================================================================
# .env.example - SKIN CANCER ANALYZER
# Copie para .env e preencha com seus valores
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=False
LOG_LEVEL=INFO

# ============================================================================
# SERVER
# ============================================================================
HOST=0.0.0.0
PORT=5000
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# ============================================================================
# FILE UPLOAD
# ============================================================================
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# ============================================================================
# AI MODEL
# ============================================================================
MODEL_PATH=/app/models
MODEL_FILE=skin_cancer_model.h5
CONFIDENCE_THRESHOLD=0.75

# ============================================================================
# DATABASE - PostgreSQL
# ============================================================================
POSTGRES_DB=skin_cancer
POSTGRES_USER=skin_cancer_user
POSTGRES_PASSWORD=change-this-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://skin_cancer_user:change-this-password@postgres:5432/skin_cancer

# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# ============================================================================
# PGADMIN (Opcional - para administração do banco)
# ============================================================================
PGADMIN_EMAIL=admin@skincancer.local
PGADMIN_PASSWORD=admin

# ============================================================================
# MONITORING (Opcional)
# ============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
PROMETHEUS_ENABLED=false

# ============================================================================
# SECURITY
# ============================================================================
CORS_ORIGINS=*
JWT_SECRET_KEY=change-this-jwt-secret-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# ============================================================================
# EMAIL (Opcional - para notificações)
# ============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ============================================================================
# SENTRY (Opcional - para error tracking)
# ============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ============================================================================
# AWS S3 (Opcional - para storage de imagens)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=skin-cancer-uploads

# ============================================================================
# MISC
# ============================================================================
TIMEZONE=America/Sao_Paulo
LOCALE=pt_BR.UTF-8
